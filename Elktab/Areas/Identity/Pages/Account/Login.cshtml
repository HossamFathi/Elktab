@page
@model LoginModel

@{
    ViewData["Title"] = "ElKtab";
}


<div class="col-12 row mt-5 ">
   
        <section class="col-lg-6 col-md-6 shadow container mb-5" style="padding:1.5rem;">
            <form id="account" method="post">
            
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info col-4">Log in</button>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-align:end"> <button  type="button" class="btn btn-success col-7">New Account</button></a>
                </div>
                @*<div class="form-group">
                <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>*@
            </form>
        </section>
        <div class="col-lg-5 col-md-6 text-center" style="padding-top:10%">
            <h4 style="color: #177db8; font-family: cursive; ">@ViewData["Title"]</h4>
         
            <p style="color: #1e4f7a" > Make you review book easer and chack reviews before read any book </p>
        </div>
    
</div>





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
